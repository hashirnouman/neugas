{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf",
		"ignore": ["node_modules", "next", "dist", "build"]
	},
	"linter": {
		"enabled": true,
		"ignore": ["node_modules", "next", "dist", "build"],
		"rules": {
			"recommended": true
		}
	}
}
